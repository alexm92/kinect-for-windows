<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:k="http://schemas.microsoft.com/kinect/2013" x:Class="PongGame.MainWindow"
        Title="MainWindow" Height="800" Width="1380" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <k:KinectSensorChooserUI x:Name="SensorChooserUi" Height="50" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <k:KinectUserViewer Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100"/>
        </DockPanel>
        
        <Viewbox Grid.Row="1" Stretch="UniformToFill">
            <Canvas x:Name="GameWindow" Width="640" Height="480" Background="#f2f2f2">
                <Rectangle x:Name="Player" Fill="#555555" Height="150" Width="10" Canvas.Left="5" Canvas.Top="68" />
                <Ellipse x:Name="Ball" Fill="#F00" HorizontalAlignment="Center" Height="30" Grid.Row="1" Stroke="Black" VerticalAlignment="Center" Width="30" />
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
